<div id="size-chart-block">
    <h3>Size Chart</h3>
    <table>
        <thead>
            <tr>
                <th>Size</th>
                <th>Chest</th>
                <th>Waist</th>
                <th>Hip</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>S</td>
                <td>34-36</td>
                <td>28-30</td>
                <td>35-37</td>
            </tr>
            <!-- More size chart rows -->
        </tbody>
    </table>
</div>

{% schema %}
{
"name":"Size chart Pro",
"target":"body",
"enabled_on":{
"templates":[
"product"
]
},
"settings":[
{
"type":"select",
"id":"size_button_position_desktop",
"label":"Size Button horizontal position - Desktop",
"options":[
{
"value":"left",
"label":"Left"
},
{
"value":"center",
"label":"Center"
},
{
"value":"right",
"label":"Right"
}
],
"default":"left"
},
{
"type":"select",
"id":"size_button_position_mobile",
"label":"Size Button horizontal position - mobile",
"options":[
{
"value":"left",
"label":"Left"
},
{
"value":"center",
"label":"Center"
},
{
"value":"right",
"label":"Right"
}
],
"default":"left"
}
]
}
{% endschema %}